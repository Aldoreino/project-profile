<h1 class="info">Sign up</h1>
<div class="col-sm-2 col-sm-offset-5 signup"><!-- centers the form in the center of the page -->	
	<%= form_for (@user) do |f| %>
		Name: <%= f.text_field :name %>
		Email: <%= f.text_field :email %>
		Password: <%= f.password_field :password %>
		Password Confirmation: <%= f.password_field :password_confirmation %>

		<%= f.submit 'Submit' %>

	<% end %>
</div>