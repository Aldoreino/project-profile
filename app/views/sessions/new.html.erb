<h1 class="info">Log in</h1>
<div class="col-sm-2 col-sm-offset-5 signup"><!-- centers the form in the center of the page -->
	<div class="box">
		<h3 id="head">Please log in to create a new profile</h3>
		<%= form_tag (@user) do |f| %>
			Email: <%= text_field_tag :email %>
			Password: <%= password_field_tag :password %>

		<%= submit_tag 'Log in' %>

		<% end %>
	</div>
</div>